---
const currentYear = new Date().getFullYear();
const socialLinks = [
  { icon: 'fab fa-twitter', url: '#' },
  { icon: 'fab fa-instagram', url: '#' },
  { icon: 'fab fa-youtube', url: '#' },
  { icon: 'fab fa-discord', url: '#' }
];
---

<footer class="bg-[#0d1b2a] text-white py-8 border-t border-[#2e2e2e]">
  <div class="container mx-auto px-4 text-center">
    <p class="text-[#2e2e2e] text-sm mb-4">&copy; {currentYear} Tinky Winky Skulls. All rights reserved.</p>
    <div class="flex justify-center gap-6">
      {socialLinks.map((link) => (
        <a href={link.url} class="text-[#2e2e2e] hover:text-white transition-colors duration-300">
          <i class={link.icon}></i>
        </a>
      ))}
    </div>
  </div>
</footer>