---
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/community', label: 'Community' },
  { href: '/fan-stories', label: 'Fan-Stories' },
  { href: '/club-perks', label: 'Club-Perks' },
  { href: '/member-directory', label: 'Member-Directory' },
  { href: '/events', label: 'Events' }
];
---

<nav class="bg-[#0d1b2a] text-[#2e2e2e] shadow-lg">
  <div class="container mx-auto px-4 py-4">
    <div class="flex justify-between items-center">
      <a href="/" class="text-2xl font-bold tracking-wider">TINKY WINKY SKULLS</a>
      
      <!-- Desktop Menu -->
      <div class="hidden md:flex gap-6">
        {navItems.map((item) => (
          <a 
            href={item.href} 
            class="hover:text-white transition-colors duration-200 font-medium"
          >
            {item.label}
          </a>
        ))}
      </div>
      
      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="md:hidden text-white">
        <i class="fas fa-bars text-2xl"></i>
      </button>
    </div>
    
    <!-- Mobile Menu (hidden by default) -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 flex flex-col gap-4 pb-4">
      {navItems.map((item) => (
        <a 
          href={item.href} 
          class="hover:text-white transition-colors duration-200 font-medium py-2 px-4 rounded hover:bg-[#2e2e2e] text-lg"
        >
          {item.label}
        </a>
      ))}
    </div>
  </div>
</nav>

<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');
  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>