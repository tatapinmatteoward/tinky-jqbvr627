---
import Layout from '../layouts/Layout.astro';

const featuredArt = [
  {
    title: "Tinky Winky’s Cryptic Dance",
    description: "A minimalist ink drawing of Tinky Winky under a blood moon, evoking eternal night.",
    artist: "ShadowWeaver"
  },
  {
    title: "Dipsy’s Bone Throne",
    description: "Bold lines depict Dipsy lounging on a throne of twisted bones, surrounded by foggy moors.",
    artist: "BoneCollector"
  },
  {
    title: "Laa-Laa’s Whispering Shadows",
    description: "Ethereal watercolor where Laa-Laa merges with swirling darkness, whispering forgotten lullabies.",
    artist: "WhisperingArt"
  },
  {
    title: "Po’s Fiery Gaze",
    description: "A striking illustration capturing Po's intense gaze amid flickering flames and shadowy whispers.",
    artist: "FlameScribe"
  }
];

const galleryItems = [
  { id: 1, title: "Skulltubbies in the Mist", artist: "GhostlyPencil" },
  { id: 2, title: "The Nightmare Tinky", artist: "MoonShade" },
  { id: 3, title: "Bone Dipsy", artist: "SkeletonArtist" },
  { id: 4, title: "Shadows of Laa-Laa", artist: "DarkCanvas" },
  { id: 5, title: "Po's Lament", artist: "FireAndShadow" },
  { id: 6, title: "Tinky's Requiem", artist: "EternalNight" },
  { id: 7, title: "The Ghoulish Teletubbies", artist: "GothicBrush" },
  { id: 8, title: "Twilight Tubbies", artist: "DuskArtist" }
];
---

<Layout title="Spooky Gallery of Skulltubbies" description="Explore our haunting collection of fan art, eerie photos, and gothic Teletubbies-inspired creations that capture the dark side of childhood innocence.">
  <!-- Hero Section -->
  <div class="relative bg-gradient-to-br from-gray-900 to-black py-24 overflow-hidden">
    <div class="absolute inset-0 z-0">
      <div class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-transparent via-gray-900 to-black"></div>
    </div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-5xl md:text-7xl font-bold text-white mb-6 tracking-tight">
          Spooky Gallery of <span class="text-accent">Skulltubbies</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-300 mb-8 font-light">
          Uniting Teletubbies Fans in a Spooky Embrace
        </p>
        <div class="mt-12">
          <div class="inline-block px-6 py-3 bg-accent text-white font-bold rounded-full text-lg shadow-lg transform transition duration-300 hover:scale-105">
            Explore Our Haunting Collection
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Welcome Section -->
  <section class="py-20 bg-gradient-to-b from-black to-gray-900">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-white mb-6">Welcome to the Skulltubbies Gallery</h2>
          <div class="w-24 h-1 bg-accent mx-auto"></div>
        </div>
        
        <div class="prose prose-lg prose-invert max-w-none text-gray-300 leading-relaxed">
          <p class="text-xl text-center mb-8">
            Dive into the shadows of nostalgia with our curated gallery of <em>Skulltubbies Unite</em>. 
            Here, beloved Teletubbies take on a gothic twist—think Tinky Winky with skeletal vibes and Po in perpetual twilight. 
            Perfect for fans who crave the spooky embrace of dark whimsy.
          </p>
          
          <div class="mt-12 bg-gray-800 bg-opacity-50 rounded-xl p-8 border border-gray-700">
            <h3 class="text-2xl font-bold text-white mb-4 flex items-center">
              <i class="fas fa-paint-brush text-accent mr-3"></i>
              Featured Fan Art
            </h3>
            <p class="text-gray-300">
              Unleash your inner artist! Our community shares haunting illustrations:
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Art Gallery -->
  <section class="py-16 bg-gradient-to-b from-gray-900 to-black">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-white mb-4">Featured Creations</h2>
        <p class="text-xl text-gray-400 max-w-2xl mx-auto">
          Discover the darkest interpretations of our favorite characters
        </p>
        <div class="w-24 h-1 bg-accent mx-auto mt-4"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {featuredArt.map((art, index) => (
          <div 
            key={index} 
            class="group relative bg-gray-800 rounded-xl overflow-hidden border border-gray-700 transition-all duration-300 hover:border-accent hover:shadow-2xl hover:shadow-accent/20"
          >
            <div class="h-64 bg-gradient-to-br from-gray-900 to-black flex items-center justify-center">
              <div class="text-center p-4">
                <div class="inline-block w-16 h-16 rounded-full bg-accent flex items-center justify-center mb-4">
                  <i class="fas fa-skull text-white text-2xl"></i>
                </div>
                <h3 class="text-xl font-bold text-white group-hover:text-accent transition-colors">
                  {art.title}
                </h3>
              </div>
            </div>
            <div class="p-6">
              <p class="text-gray-300 mb-4">{art.description}</p>
              <div class="flex justify-between items-center">
                <span class="text-sm text-gray-500">by {art.artist}</span>
                <i class="fas fa-arrow-right text-accent"></i>
              </div>
            </div>
            <div class="absolute inset-0 bg-gradient-to-t from-black to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Gallery Grid -->
  <section class="py-20 bg-gradient-to-b from-black to-gray-900">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-white mb-4">Complete Gallery</h2>
        <p class="text-xl text-gray-400 max-w-2xl mx-auto">
          A haunting collection of fan artworks and creations
        </p>
        <div class="w-24 h-1 bg-accent mx-auto mt-4"></div>
      </div>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {galleryItems.map((item) => (
          <div 
            key={item.id} 
            class="group relative bg-gray-800 rounded-xl overflow-hidden border border-gray-700 transition-all duration-300 hover:border-accent hover:-translate-y-2"
          >
            <div class="h-48 bg-gradient-to-br from-gray-800 to-gray-900 flex items-center justify-center">
              <div class="text-center">
                <div class="inline-block w-12 h-12 rounded-full bg-accent flex items-center justify-center mb-3">
                  <i class="fas fa-palette text-white"></i>
                </div>
                <h3 class="font-bold text-white text-sm group-hover:text-accent transition-colors">
                  {item.title}
                </h3>
              </div>
            </div>
            <div class="p-4">
              <p class="text-gray-400 text-sm">by {item.artist}</p>
            </div>
          </div>
        ))}
      </div>
      
      <div class="text-center mt-16">
        <button class="inline-block px-8 py-4 bg-transparent border-2 border-accent text-white font-bold rounded-full text-lg hover:bg-accent transition-colors duration-300 transform hover:scale-105">
          View All Artworks
        </button>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-gray-900 to-black relative overflow-hidden">
    <div class="absolute inset-0 z-0">
      <div class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-transparent via-gray-900 to-black"></div>
    </div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">Join Our Spooky Community</h2>
        <p class="text-xl text-gray-300 mb-10">
          Share your own Skulltubbies creations and be part of this hauntingly beautiful movement
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button class="px-8 py-4 bg-accent text-white font-bold rounded-full text-lg hover:bg-red-900 transition-colors duration-300 transform hover:scale-105">
            Submit Your Art
          </button>
          <button class="px-8 py-4 bg-transparent border-2 border-white text-white font-bold rounded-full text-lg hover:bg-white hover:text-black transition-colors duration-300">
            Browse All Artists
          </button>
        </div>
      </div>
    </div>
  </section>
</Layout>