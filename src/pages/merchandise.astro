---
import Layout from '../layouts/Layout.astro';

const merchandiseItems = [
  {
    id: 1,
    title: "T-Shirts",
    description: "Soft, black cotton tees featuring skeletal Tinky Winky and ghostly Dipsy.",
    price: "$25",
    color: "bg-gray-900"
  },
  {
    id: 2,
    title: "Hoodies",
    description: "Oversized pullover hoodies with subtle skull motifs and faded Teletubbie landscapes.",
    price: "$45",
    color: "bg-gray-800"
  },
  {
    id: 3,
    title: "Tank Tops",
    description: "Breathable gothic tanks showcasing Noo-Noo in shadowy voids.",
    price: "$20",
    color: "bg-gray-900"
  }
];

const features = [
  {
    icon: "fas fa-tshirt",
    title: "Apparel",
    description: "Wear the darkness with our haunting designs"
  },
  {
    icon: "fas fa-palette",
    title: "Custom Art",
    description: "Unique gothic interpretations of beloved characters"
  },
  {
    icon: "fas fa-truck",
    title: "Fast Shipping",
    description: "Get your Skulltubbies gear delivered to your doorstep"
  }
];
---

<Layout title="Spooky Merchandise Collection" description="Discover our dark, gothic-inspired Teletubbies merchandise that unites fans in a haunting embrace. From apparel to accessories, embrace the Skulltubbies vibe with minimalist gothic designs.">
  <!-- Hero Section -->
  <div class="relative overflow-hidden bg-gradient-to-br from-gray-900 to-black py-24">
    <div class="absolute inset-0 z-0">
      <div class="absolute top-0 left-0 w-full h-full opacity-10">
        <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-red-900 rounded-full mix-blend-multiply filter blur-xl animate-blob"></div>
        <div class="absolute top-1/3 right-1/4 w-72 h-72 bg-white rounded-full mix-blend-multiply filter blur-xl animate-blob animation-delay-2000"></div>
        <div class="absolute bottom-1/4 left-1/2 w-60 h-60 bg-red-800 rounded-full mix-blend-multiply filter blur-xl animate-blob animation-delay-4000"></div>
      </div>
    </div>
    <div class="container mx-auto px-4 relative z-10 text-center">
      <h1 class="text-5xl md:text-7xl font-bold text-white mb-6 tracking-tight">
        Skulltubbies <span class="text-red-600">Unite</span>
      </h1>
      <p class="text-xl md:text-2xl text-gray-300 max-w-3xl mx-auto mb-10">
        Uniting Teletubbies Fans in a Spooky Embrace
      </p>
      <div class="bg-red-600 text-white px-8 py-4 rounded-full inline-block font-bold text-lg shadow-lg hover:bg-red-700 transition duration-300 transform hover:scale-105">
        Enter the Merch Vault
      </div>
    </div>
  </div>

  <!-- Welcome Section -->
  <section class="py-20 bg-gray-900">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-8">Welcome to the Skulltubbies Merch Vault</h2>
        <div class="text-gray-300 text-lg leading-relaxed">
          <p class="mb-6">
            Dive into the shadows of fandom with our exclusive <span class="text-red-500 font-bold">Skulltubbies Unite</span> merchandise. Our collection fuses the whimsical world of Teletubbies with a 
            <span class="text-red-500 font-bold"> dark minimalist gothic twist</span>, perfect for fans who crave that spooky embrace. Each piece is crafted to unite you with fellow enthusiasts in eerie style.
          </p>
          <p>
            From apparel to accessories, embrace the Skulltubbies vibe with minimalist gothic designs that speak to your inner darkness.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Apparel Section -->
  <section class="py-20 bg-black">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Apparel: Wear the Darkness</h2>
        <div class="w-24 h-1 bg-red-600 mx-auto"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {merchandiseItems.map((item) => (
          <div class={`${item.color} rounded-xl overflow-hidden shadow-2xl transform transition duration-500 hover:scale-105`}>
            <div class="p-8">
              <div class="flex justify-center mb-6">
                <div class="bg-gray-800 border-2 border-dashed rounded-xl w-16 h-16" />
              </div>
              <h3 class="text-2xl font-bold text-white text-center mb-4">{item.title}</h3>
              <p class="text-gray-300 text-center mb-6">{item.description}</p>
              <div class="text-center">
                <span class="text-red-500 font-bold text-xl">{item.price}</span>
              </div>
            </div>
            <div class="bg-gray-800 px-8 py-4 text-center">
              <button class="text-white font-bold uppercase tracking-wider hover:text-red-500 transition">Add to Cart</button>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-20 bg-gradient-to-r from-gray-900 to-black">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Why Skulltubbies Unite?</h2>
        <p class="text-gray-400 max-w-2xl mx-auto">The perfect fusion of nostalgia and gothic horror</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {features.map((feature) => (
          <div class="bg-gray-800 rounded-xl p-8 text-center transform transition duration-500 hover:-translate-y-2">
            <div class="flex justify-center mb-6">
              <i class={`${feature.icon} text-4xl text-red-500`}></i>
            </div>
            <h3 class="text-xl font-bold text-white mb-4">{feature.title}</h3>
            <p class="text-gray-300">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-red-900 to-red-800">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Ready to Join the Unite?</h2>
      <p class="text-xl text-red-100 max-w-2xl mx-auto mb-10">
        Become part of the haunting legacy of Skulltubbies Unite
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <button class="bg-white text-red-800 px-8 py-4 rounded-full font-bold text-lg hover:bg-gray-100 transition">
          Browse Collection
        </button>
        <button class="bg-transparent border-2 border-white text-white px-8 py-4 rounded-full font-bold text-lg hover:bg-white hover:text-red-800 transition">
          Learn More
        </button>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="py-12 bg-gray-900 border-t border-gray-800">
    <div class="container mx-auto px-4 text-center">
      <p class="text-gray-400">
        Â© {new Date().getFullYear()} Skulltubbies Unite. All rights reserved.
      </p>
      <p class="text-gray-500 mt-2">
        Uniting Teletubbies Fans in a Spooky Embrace
      </p>
    </div>
  </footer>
</Layout>